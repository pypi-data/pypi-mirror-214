#:kivy 2.1.0

<PanelLabel@CProperties+Label>:
    color: (*app.get_theme_color('panel.text'), 1)
    markup: True

<PanelItemLabel@PanelLabel>:
    focused: False
    alt: False
    playing: False
    color: (*app.get_panel_item_color('text', self.focused, self.alt, self.playing), 1)

<PanelTitleLabel@PanelLabel>:
    bold: True
    text_size: self.size
    font_size: 30
    halign: 'left'
    valign: 'center'
    padding: 20, 5

<PanelItem@BBoxLayout>:
    selected: False
    focused: False
    alt: False
    playing: False
    background_color: app.get_panel_item_color('background', self.focused, self.alt, self.playing)
