#: import gch kivy.utils.get_color_from_hex


<SettingsScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            SettingsBox:





<SettingsBox>
    adaptive_height: True


    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:

        cols: 2

        NarunoLabel:
            text: "DEBUG MODE"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.d_first_status
                on_active: root.D_Status_Changing(self, self.active)


        NarunoLabel:
            text: "TEST MODE"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.t_first_status
                on_active: root.T_Status_Changing(self, self.active)


        NarunoLabel:
            text: "MUTE NOTIFICATIONS"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.mt_first_status
                on_active: root.MT_Status_Changing(self, self.active)


        NarunoLabel:
            text: "DARK MODE"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.dark_mode_first_status
                on_active: root.DARK_MODE_Status_Changing(self, self.active)
